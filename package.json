{
  "name": "online-exam",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:ts": "tsc",
    "clean": "rimraf build",
    "build": "npm run clean && tsc && mkdirp build && cpx \"public/**/*\" build && cpx \"dist/**/*\" build",
    "build:css": "tailwindcss -i ./src/style.css -o ./public/style.css --watch",
    "start": "npm run build:ts && npm run build:css",
    "watch:css": "tailwindcss -i ./src/style.css -o ./public/style.css --watch",
    "watch:ts": "tsc --watch",
    "watch:all": "concurrently \"npm run watch:ts\" \"npm run watch:css\"",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cpx": "^1.5.0",
    "gh-pages": "^6.1.1",
    "mkdirp": "^3.0.1",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.8.3"
  },
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6"
  }
}